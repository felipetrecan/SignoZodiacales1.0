<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.felipe.signozodiacales.Main3Activity"
    android:orientation="vertical"
    android:background="@drawable/fondossignos"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acuario"
        android:textSize="25dp"/>
    <ImageView
    android:id="@+id/imageView2"
        android:layout_width="272dp"
        android:layout_height="121dp"
    app:srcCompat="@drawable/acuario" />


    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
Elemento: Aire \n
Cualidad: Fijo\n
Color: Azul, Verde-Azul, Gris, Negro\n
Día: Domingo\n
Regente: Urano\n
Mayor compatibilidad con: Géminis, Libra\n
Mejor pareja para Matrimonio y Asociaciones: Leo\n
Números de la Suerte: 4, 8, 13, 17, 22, 26\n
Rango de Nacimiento: Enero 20 – Febrero 18\n"
            android:textAlignment="viewStart" />
</ScrollView>

</LinearLayout>
